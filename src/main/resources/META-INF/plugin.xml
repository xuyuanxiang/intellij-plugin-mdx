<idea-plugin>
    <id>MDX</id>
    <name>MDX</name>
    <version>0.0.1</version>
    <vendor email="hi@xuyuanxiang.cn" url="https://github.com/xuyuanxiang">xuyuanxiang</vendor>
    <description><![CDATA[
      <style type="text/css">
        body{font-size:14px;line-height:1.6;font-family: Helvetica, arial, freesans, clean, sans-serif;padding: 16px;}
        body h2{font-size:24px;border-bottom:1px solid #ccc;color:#000;}
        body blockquote{border-left:4px solid #DDD;padding:0 15px;color:#777;}
        body blockquote>:first-child{margin-top:0;}
        body blockquote>:last-child{margin-bottom:0;}
      </style>
      <p>Provides support for <a href="https://mdxjs.com/">MDX</a>.</p>
      <blockquote>
        <p>MDX is an authorable format that lets you seamlessly write JSX in your Markdown documents. </p>
        <p>You can import components, such as interactive charts or alerts, and embed them within your content.</p>
        <p>This makes writing long-form content with components a blast ðŸš€.</p>
      </blockquote>
      <h2>Features</h2>
      <ul>
        <li>Syntax highlighting</li>
        <li>Preview MDX</li>
        <li>Code completion</li>
        <li>Code navigation</li>
        <li>etc.</li>
      </ul>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.intellij.plugins.markdown</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="MDX" extensions="md;mdx"
                  implementationClass="com.github.xuyuanxiang.intellij.plugin.mdx.MDXFileType" fieldName="INSTANCE"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>