<idea-plugin>
    <id>MDX</id>
    <name>MDX</name>
    <vendor email="hi@xuyuanxiang.cn" url="https://github.com/xuyuanxiang">xuyuanxiang</vendor>
    <description><![CDATA[
      <p>Provides support for <a href="https://mdxjs.com/">MDX</a>.</p>
      <blockquote>
        <p>MDX is an authorable format that lets you seamlessly write JSX in your Markdown documents. </p>
        <p>You can import components, such as interactive charts or alerts, and embed them within your content.</p>
        <p>This makes writing long-form content with components a blast ðŸš€.</p>
      </blockquote>
      <p>Features</p>
      <ul>
        <li>Syntax highlighting</li>
        <li>Code completion</li>
        <li>Code navigation</li>
        <li>etc.</li>
      </ul>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.intellij.plugins.markdown</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="MDX" extensions="mdx" language="MDX"
                  implementationClass="com.github.xuyuanxiang.intellij.plugin.mdx.MDXFileType" fieldName="INSTANCE"/>
        <lang.parserDefinition language="MDX" implementationClass="com.github.xuyuanxiang.intellij.plugin.mdx.MDXParserDefinition"/>
        <lang.ast.factory language="MDX" implementationClass="com.github.xuyuanxiang.intellij.plugin.mdx.MDXASTFactory"/>
        <syntaxHighlighter key="MDX" implementationClass="com.github.xuyuanxiang.intellij.plugin.mdx.MDXHighlighter"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>